  <script>
    document.getElementById('year').textContent = new Date().getFullYear();
    function toggleMobile(){
      const nav = document.querySelector('nav');
      if(nav.style.display==='flex'){nav.style.display='none'}else{nav.style.display='flex'}
    }
    function subscribe(){
      const e = document.getElementById('email').value.trim();
      if(!e){alert('Email kiriting');return}
      alert('Rahmat. Siz obuna bo'ldingiz: ' + e);
      document.getElementById('email').value='';
    }
    function sendMessage(){
      const n = document.getElementById('name').value.trim();
      const e = document.getElementById('email2').value.trim();
      const m = document.getElementById('message').value.trim();
      if(!n||!e||!m){alert('Iltimos barcha maydonlarni to'ldiring');return}
      alert('Xabaringiz qabul qilindi. Rahmat, ' + n + '!');
      document.getElementById('name').value='';document.getElementById('email2').value='';document.getElementById('message').value='';
    }
  </script>
